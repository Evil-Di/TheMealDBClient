<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CategoryItemCardStyle" parent="Widget.Material3.CardView.Outlined">
        <item name="android:backgroundTint">?attr/colorSurfaceContainer</item>
        <item name="strokeColor">?attr/colorOutlineVariant</item>
        <item name="cardCornerRadius">12dp</item>
    </style>

    <style name="BackButtomStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:src">@drawable/arrow_back_24px</item>
        <item name="android:background">@color/transparent</item>
    </style>

    <style name="CategoryItemNameStyle">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="CategoryItemInfoStyle">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="RecipeItemCardStyle" parent="Widget.Material3.CardView.Outlined">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:backgroundTint">?attr/colorSurfaceContainer</item>
        <item name="strokeColor">?attr/colorOutlineVariant</item>
        <item name="cardCornerRadius">12dp</item>
    </style>

    <style name="RecipeItemImageStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="RecipeItemNameStyle">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:layout_marginBottom">4dp</item>
    </style>

    <style name="IngredientNameStyle">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginStart">16dp</item>
    </style>

    <style name="IngredientMeasureStyle">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginEnd">16dp</item>
    </style>

    <style name="IngredientsBottomSheet">
        <item name="layout_behavior">com.google.android.material.bottomsheet.BottomSheetBehavior</item>
        <item name="behavior_peekHeight">100sp</item>
        <item name="android:background">@color/design_default_color_surface</item>
    </style>

</resources>